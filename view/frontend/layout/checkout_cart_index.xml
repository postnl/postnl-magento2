<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.shipping">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="summary-block-config" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="shipping-rates-validation" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="tig_postnl-rates-validation" xsi:type="array">
                                            <item name="component" xsi:type="string">TIG_PostNL/js/view/shipping-rates-validation/postnl</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="checkout.cart.methods">
            <block name="cart_before"
                   template="TIG_PostNL::cart/button.phtml"
                   before="checkout.cart.methods.onepage.bottom"
                   ifconfig="tig_postnl/fillin/settings/cart/enabled">
                <arguments>
                    <argument name="view_model" xsi:type="object">TIG\PostNL\ViewModel\FillIn</argument>
                </arguments>
            </block>
            <block name="cart_after"
                   template="TIG_PostNL::cart/button.phtml"
                   after="checkout.cart.methods.onepage.bottom"
                   ifconfig="tig_postnl/fillin/settings/cart/enabled">
                <arguments>
                    <argument name="view_model" xsi:type="object">TIG\PostNL\ViewModel\FillIn</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
